<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatnewCompt"
    android:orientation="vertical"
    android:gravity="top|center_vertical"
    android:background="#2F3C51"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        >

        <LinearLayout
            android:id="@+id/chang_imag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top|center_horizontal"
            android:paddingTop="30dp"
            >



            <androidx.cardview.widget.CardView
                android:id="@+id/card_image_view_circle"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="45dp"
                app:cardElevation="0dp"
                >
                <ImageButton
                    android:id="@+id/btn_get_new_imaage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/createcount"
                    android:src="@drawable/ic_github"
                    android:scaleType="centerCrop"
                    android:onClick="newImage"
                    />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/text_view_eins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Creat Acount"
                android:textSize="16sp"
                android:fontFamily="cursive"
                android:layout_marginTop="8dp"
                android:textColor="#E4EBED"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/user_name_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="15"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:hint="Username"
                android:textColorHint="#E4EBED"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="8dp"
                android:paddingBottom="15dp"
                />
            <EditText
                android:id="@+id/firstname_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="15"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:hint="First name"
                android:textColorHint="#E4EBED"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="8dp"
                android:paddingBottom="15dp"
                />
            <EditText
                android:id="@+id/lastname_creatcount_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="15"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:hint="Last Name"
                android:textColorHint="#E4EBED"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="8dp"
                android:paddingBottom="15dp"
                />
            <EditText
                android:id="@+id/email_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="15"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:hint="email"
                android:textColorHint="#E4EBED"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="8dp"
                android:paddingBottom="15dp"
                />
            <EditText
                android:id="@+id/client_creatcount_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:fontFamily="sans-serif-light"
                android:textColorHint="#E4EBED"
                android:paddingLeft="8dp"
                android:paddingBottom="12dp"
                />

            <CheckBox
                android:id="@+id/checkbox_remmeber_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:checked="false"
                android:ems="15"
                android:fontFamily="monospace"
                android:text="Remebre me"
                android:buttonTint="#eee"
                android:textColor="#fff"
                android:textColorLink="#F52828" />

            <Button
                android:id="@+id/bttn_creat_acount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundgradien"
                android:text="Creat Acount"
                android:fontFamily="monospace"
                android:textColor="#fff"
                android:layout_marginTop="30dp"
                android:ems="15"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>